<?xml version = "1.0" encoding="UTF-8"?>
<plugin xmlns = "http://apache.org/cordova/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rim="http://www.blackberry.com/ns/widgets"
    
    id="com.WISEMEN.nativecamera" version="1.0.0">
    
    
    <name> NATIVECAMERA</name>
   
    <description>PhoneGap plugin to support a custom camera overlay</description>
    <author>Vote 539 and others</author>
    
    <info>
        This plugin was written with the tutorial found a:
        http://codrspace.com/vote539/writing-a-custom-camera-plugin-for-phonegap/
    </info>
    
    <js-module src="www/js/nativecamera.js" name="nativecamera">
        <clobbers target="navigator.nativecamera" />
    </js-module>
    
    <engines>
        <engine name="cordova" version=">=3.1.0" />
    </engines>
    
    <platform name="ios">
        
        <!-- config file -->
        <config-file target="config.xml" parent="/*">
            <feature name="nativecamera">
                <param name="ios-package" value="nativecamera" />
            </feature>
        </config-file>
        
        <!-- core CustomCamera header and source files -->
        <header-file src="platforms/ios/nativecamera/Classes/nativecamera.h" />
        <header-file src="platforms/ios/nativecamera/Classes/nativecameraViewController.h" />
        <source-file src="platforms/ios/nativecamera/Classes/nativecamera.m" />
        <source-file src="platforms/ios/nativecamera/Classes/nativecameraViewController.m" />
        <resource-file src="platforms/ios/nativecamera/Classes/nativecameraViewController.xib" />
        
    </platform>
    
</plugin>